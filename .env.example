B_BASE_URL=https://your-b-site.example.com
B_BASE_URL=https://redirect.your-b-site.example.com
## Optional: used to rewrite links in bot-served pages.
# A_BASE_URL=https://your-a-site.example.com
LISTEN_ADDR=:8080
CACHE_DIR=./cache
CACHE_ALL=true
CACHE_TTL_SECONDS=2628002
CACHE_PATTERNS=/sitemap.xml,/blog/*,/products/*
REDIRECT_STATUS=302
ADMIN_TOKEN=change-me

# Logging and metrics
LOG_LEVEL=info
LOG_FILE=./logs/a-site.log
LOG_MAX_SIZE_MB=10
LOG_MAX_BACKUPS=5
LOG_MAX_AGE_DAYS=7
METRICS_INTERVAL_SECONDS=60

# Optional: Admin UI path. If not set, a long hash path is derived from ADMIN_TOKEN.
#ADMIN_UI_PATH=/admin/long-hash-here

# Per-path TTL rules (first match wins)
# Short TTL for XML/TXT; longer for blog/products
CACHE_TTL_RULES=*.xml:300,*.txt:300,/blog/*:2628002,/products/*:2628002
